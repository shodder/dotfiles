

export EDITOR=vim
export GIT_EDITOR=vim
export GREP_OPTIONS='--color=auto' GREP_COLOR='1;32'
export CLICOLOR=1

export WS=~/workspace
alias go-ws='cd $WS'
export DOTS=~/dotfiles
alias go-dots='cd $DOTS'

if [ -d "$HOME/.local/bin" ] ; then
  PATH="$PATH:$HOME/.local/bin"
fi

if [ -d "$HOME/.bin" ] ; then
  PATH="$PATH:$HOME/.bin"
fi

# load arch profile on arch!
if [ -e /etc/arch-release ] ; then
  source ~/.arch-profile
fi


